/* SQLEditor (Generic SQL)*/

CREATE TABLE USER_LEVELS
(
user_level INTEGER UNIQUE ,
user_level_desc VARCHAR,
CONSTRAINT USER_LEVELS_pkey PRIMARY KEY (user_level)
);

CREATE TABLE USERS
(
user_netid VARCHAR UNIQUE ,
user_name VARCHAR,
user_level INTEGER,
CONSTRAINT user_id PRIMARY KEY (user_netid)
);

CREATE TABLE LOGINS
(
login_id INTEGER AUTO_INCREMENT  UNIQUE ,
user_netid VARCHAR,
login_date DATE,
login_browser VARCHAR,
CONSTRAINT LOGINS_pkey PRIMARY KEY (login_id)
);

CREATE TABLE ACTIONS
(
action_id INTEGER AUTO_INCREMENT  UNIQUE ,
user_netid VARCHAR,
action_info VARCHAR,
action_time DATE,
CONSTRAINT ACTIONS_pkey PRIMARY KEY (action_id)
);

CREATE TABLE COMMITTEE_MEMBERS
(
committee_member_id INTEGER AUTO_INCREMENT  UNIQUE ,
committee_id INTEGER,
committee_member VARCHAR,
CONSTRAINT COMMITTEE_MEMBERS_pkey PRIMARY KEY (committee_member_id)
);

CREATE TABLE COMMITTEES
(
committee_id INTEGER AUTO_INCREMENT  UNIQUE ,
committee_chair VARCHAR,
CONSTRAINT COMMITTEES_pkey PRIMARY KEY (committee_id)
);

CREATE TABLE REVIEWS
(
review_id INTEGER AUTO_INCREMENT  UNIQUE ,
user_netid VARCHAR,
candidate_id VARCHAR,
review_info VARCHAR,
CONSTRAINT REVIEWS_pkey PRIMARY KEY (review_id)
);

ALTER TABLE USERS ADD FOREIGN KEY (user_level) REFERENCES USER_LEVELS (user_level);

ALTER TABLE LOGINS ADD FOREIGN KEY (user_netid) REFERENCES USERS (user_netid);

ALTER TABLE ACTIONS ADD FOREIGN KEY (user_netid) REFERENCES USERS (user_netid);

ALTER TABLE COMMITTEE_MEMBERS ADD FOREIGN KEY (committee_id) REFERENCES COMMITTEES (committee_id);

ALTER TABLE COMMITTEE_MEMBERS ADD FOREIGN KEY (committee_member) REFERENCES USERS (user_netid);

ALTER TABLE COMMITTEES ADD FOREIGN KEY (committee_chair) REFERENCES USERS (user_netid);

ALTER TABLE REVIEWS ADD FOREIGN KEY (user_netid) REFERENCES USERS (user_netid);

ALTER TABLE REVIEWS ADD FOREIGN KEY (candidate_id) REFERENCES CANDIDATES (candidate_id);
