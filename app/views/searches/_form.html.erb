<!-- Search Form -->
<%= form_tag searches_path, method: :get, class: 'search-form' do %>
  <%= text_field_tag :query, params[:query], class: 'search-input' %>

  <%# Fetch field names dynamically from the SearchService %>
  <% field_options = SearchService.get_all_field_names(token: session[:jwt_token]) %>

  <%= select_tag :field, options_for_select(field_options), class: 'search-dropdown' %>
  <%= submit_tag "Search", class: 'search-btn' %>
<% end %>
